{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600, s-maxage=3600, stale-while-revalidate=86400"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-update?secret=${CRON_SECRET}",
      "schedule": "0 0 * * *"
    }
  ]
} 